<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="home.css">
    <link rel="stylesheet" href="w3.css">
    <title>Riot</title>
</head>
<body>
    <div class = "riotSite">
        <a href="/home" class = "logo_ubi"></a>
    </div>
    <div class="w3-content w3-display-container">
        <img class="mySlides1" src="image/info-riot.png">
        <img class="mySlides1" src="image/jogos-riot.png">
        <img class="mySlides1" src="image/comment-riot.png">
        <button class="w3-button w3-black1 w3-display-left1" onclick="plusDivs(-1)">&#10094;</button>
        <button class="w3-button w3-black1 w3-display-right1" onclick="plusDivs(1)">&#10095;</button>
        <a href="https://www.riotgames.com/pt-br/" class = "link-ubi"></a>
    </div>

    <script>
    var slideIndex = 1;
    showDivs(slideIndex);

    function plusDivs(n) {
    showDivs(slideIndex += n);
    }

    function showDivs(n) {
    var i;
    var x = document.getElementsByClassName("mySlides1");
    if (n > x.length) {slideIndex = 1}
    if (n < 1) {slideIndex = x.length}
    for (i = 0; i < x.length; i++) {
        x[i].style.display = "none";  
    }
    x[slideIndex-1].style.display = "block";  
    }
    </script>
</body>
</html>